openapi: 3.0.0
info:
  title: Authentication API
  description: Authenticate a user
  version: 1.0.0
paths:
  /login:
    post:
      summary: Login in system
      tags:
        - POST
      operationId: login
      requestBody:
        required: True
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/login'
      responses:
        '200':
          description: Logged successful
components:
  schemas:
    login:
      type: object
      properties:
        email:
          type: string
        password:
          type: string
      required:
        - email
        - password