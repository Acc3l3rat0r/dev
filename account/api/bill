openapi: 3.0.0
info:
  title: Bill system API
  description: Create, delete bill and add money
  version: 1.0.0
paths:
  /create:
    post:
      summary: Create a new bill
      tags:
        - POST
      operationId: createBill
      requestBody:
        required: True
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/bill'
      responses:
        '200':
          description: Bill was created
  /delete/{billId}:
    get:
      summary: Delete bill
      tags:
        - GET
      operationId: deleteBill
      parameters:
        - in: path
          name: billId
          required: True
          description: Id of bill
          schema:
            type: string
            format: uuid
      responses:
        '200':
          description: Bill was deleted
  /addMoney:
    put:
      summary: Add money to bill
      tags:
        - PUT
      operationId: addMoney
      requestBody:
        required: True
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/payment'
      responses:
        '200':
          description: Money was added
components:
  responses:
    Ok:
      description: Ok
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/bill'
  schemas:
    bill:
      type: object
      properties:
        billId:
          type: string
        userId:
          type: string
        balance:
          type: integer
      required:
        - billId
        - userId
        - balance
    payment:
      type: object
      properties:
        billId:
          type: string
        amount:
          type: integer
      required:
        - billId
        - amount